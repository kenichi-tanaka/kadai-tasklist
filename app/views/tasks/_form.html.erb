<div class="row">
    <div class="col-lg-offset-3 col-lg-6 col-sm-offset-2 col-sm-8 col-xs-12">

<%= form_for(task) do |f| %>
 <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
          <% task.errors.full_messages.each do |task| %>
           <li><%= task %></li>
 <% end %>

      </ul>
    </div>
<% end %>

 
 <div class="form-group"> 
<%= f.label :content, class:'control-label'  'タスク' %>
<%= f.text_field :content, class: 'form-control' %>
 </div>

 <div class="form-group">
<%= f.label :status, class:'control-label' '状態' %>
<%= f.text_field :status, class: 'form-control'%>
 </div>
  
  
<%= f.submit '投稿', class:"btn btn-info" %>
<% end %>




    </div>
</div>